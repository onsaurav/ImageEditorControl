                <Border Background="{Binding}" Tag="{Binding}" Width="{Binding ElementName=cboBorderColor, Path=ActualWidth}" Height="15" DockPanel.Dock="Left"/>
                <!--<TextBlock Text="{Binding}" Margin="5,0,0,0"/>-->
            </DockPanel>
        </DataTemplate>
    </UserControl.Resources>
    
