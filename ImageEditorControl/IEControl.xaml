                                            <Label Content="Brush Size" Width="65"/>
                                            <TextBlock Name="tblOilPainting" Width="25" IsEnabled="False" />
                                            <Slider Name="sliOilPainting" Margin="3,0,0,0" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1"/>
